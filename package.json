{
  "name": "node-typescript-starter",
  "version": "1.0.0",
  "description": "Node typescript starter project ",
  "main": "server.js",
  "scripts": {
    "dev": " concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch:sass\" \"npm run watch:ts\" \"npm run watch:node\"",
    "build": "rimraf ./dist && npm run build:ts && npm run build:sass && npm run cp:statics",
    "start": "npm run build && NODE_ENV=production node dist/server.js",
    "watch:ts": "tsc -w",
    "watch:node": "NODE_ENV=development nodemon dist/server.js",
    "watch:sass": "node-sass -w src/public/css/main.scss dist/public/css/main.css",
    "build:ts": "tsc",
    "build:sass": "node-sass src/public/css/main.scss dist/public/css/main.css",
    "cp:statics": "ts-node copyStaticFiles",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/parkoon/node-typescript-starter.git"
  },
  "keywords": [
    "node.js",
    "express",
    "handlebars",
    "typescript"
  ],
  "author": "parkoon",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/parkoon/node-typescript-starter/issues"
  },
  "homepage": "https://github.com/parkoon/node-typescript-starter#readme",
  "devDependencies": {
    "@types/compression": "^1.7.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.6",
    "@types/express-rate-limit": "^5.0.0",
    "@types/helmet": "0.0.46",
    "@types/lusca": "^1.6.1",
    "@types/morgan": "^1.9.0",
    "@types/node": "^13.13.4",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "concurrently": "^5.2.0",
    "eslint": "^6.8.0",
    "node-sass": "^4.14.0",
    "nodemon": "^2.0.3",
    "rimraf": "^3.0.2",
    "ts-node": "^8.9.1",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "@types/express": "^4.17.6",
    "@types/express-handlebars": "^3.1.0",
    "@types/shelljs": "^0.8.7",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-handlebars": "^4.0.3",
    "express-rate-limit": "^5.1.1",
    "helmet": "^3.22.0",
    "lusca": "^1.6.1",
    "morgan": "^1.10.0",
    "shelljs": "^0.8.4",
    "xss-clean": "^0.1.1"
  }
}
