{
  "name": "node-typescript-starter",
  "version": "1.0.0",
  "description": "Node typescript starter project ",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon",
    "build": "rimraf ./build && tsc",
    "start": "npm run build && node build/index.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch:sass\" \"npm run watch:ts\" \"npm run watch:node\"",
    "watch:ts": "tsc -w",
    "watch:node": "nodemon",
    "watch:sass": "node-sass -w src/public/css/main.scss dist/public/css/main.css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/parkoon/node-typescript-starter.git"
  },
  "keywords": [
    "node.js",
    "express",
    "handlebars",
    "typescript"
  ],
  "author": "parkoon",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/parkoon/node-typescript-starter/issues"
  },
  "homepage": "https://github.com/parkoon/node-typescript-starter#readme",
  "devDependencies": {
    "@types/node": "^13.13.4",
    "concurrently": "^5.2.0",
    "node-sass": "^4.14.0",
    "nodemon": "^2.0.3",
    "rimraf": "^3.0.2",
    "ts-node": "^8.9.1",
    "typescript": "^3.8.3"
  }
}
